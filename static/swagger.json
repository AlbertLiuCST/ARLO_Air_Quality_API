{
    "openapi": "3.0.0",
    "info": {
      "version": "1.0.0",
      "title": "ARLO-Air-Quality-API",
      "description": "A sample API demostrates ARLO-Air-Quality-API"
    },
    "servers": [
      {
        "url": "/"
      }
    ],
    "paths": {
      "/readings": {
        "post": {
          "security": [
            {
              "bearerAuth": []
            }
          ],
          "description": "Create a new request system that returns list of air quality data at a specified range of time",
          "tags": [
            "Reading Request"
          ],
          "requestBody": {
            "description": "Reading request body",
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/readingsrequest"
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "pet response",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/readingsrequest"
                  }
                }
              }
            },
            "default": {
              "description": "unexpected error",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/Error"
                  }
                }
              }
            }
          }
        }
      },
      "/devices": {
        "post": {
          "security": [
            {
              "bearerAuth": []
            }
          ],
          "description": "Get list of registered devices in the system",
          "tags": [
            "Devices Request"
          ],
          "responses": {
            "200": {
              "description": "OK",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/devices_info"
                  }
                }
              }
            },
            "default": {
              "description": "unexpected error",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/Error"
                  }
                }
              }
            }
          }
        }
      },
      "/readings/device": {
        "post": {
          "security": [
            {
              "bearerAuth": []
            }
          ],
          "description": "Get devices latest record air quality data",
          "tags": [
            "Devices Request"
          ],
          "requestBody": {
            "description": "Request Post Object",
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/readingsdevice"
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "OK",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/devices_info"
                  }
                }
              }
            },
            "default": {
              "description": "unexpected error",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/Error"
                  }
                }
              }
            }
          }
        }
      },
      "/login": {
        "post": {
          "description": "User Authentication for API calls",
          "tags": [
            "Users"
          ],
          "requestBody": {
            "description": "Request Post Object",
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/loginParameters"
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "OK",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/loginParameters"
                  }
                }
              }
            },
            "default": {
              "description": "unexpected error",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/Error"
                  }
                }
              }
            }
          }
        }
      },
      "/signup": {
        "post": {
          "description": "User sign up API calls",
          "tags": [
            "Users"
          ],
          "requestBody": {
            "description": "Request Post Object",
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/signupParameters"
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "OK",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/signupParameters"
                  }
                }
              }
            },
            "default": {
              "description": "unexpected error",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/Error"
                  }
                }
              }
            }
          }
        }
      },
      "/profile": {
        "post": {
          "description": "User sign up API calls",
          "tags": [
            "Users"
          ],
          "requestBody": {
            "description": "Request Post Object",
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/requestProfile"
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "OK",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/profile"
                  }
                }
              }
            },
            "default": {
              "description": "unexpected error",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/Error"
                  }
                }
              }
            }
          }
        }
      }
    },
    "components": {
      "securitySchemes": {
        "bearerAuth": {
          "type": "http",
          "scheme": "bearer",
          "bearerFormat": "JWT"
        }
      },
      "schemas": {
        "readingsdevice": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string",
              "minimum": 1
            }
          }
        },
        "readingsrequest": {
          "type": "object",
          "properties": {
            "device_id": {
              "type": "string",
              "minimum": 1
            },
            "Temperature": {
              "type": "boolean"
            },
            "Humidity": {
              "type": "boolean"
            },
            "TVOC": {
              "type": "boolean"
            },
            "CO2": {
              "type": "boolean"
            },
            "Start_date": {
              "type": "string",
              "pattern": "2020-05-04 13:33"
            },
            "End_date": {
              "type": "string",
              "pattern": "2020-05-04 13:33"
            }
          }
        },
        "loginParameters": {
          "type": "object",
          "properties": {
            "username": {
              "type": "string"
            },
            "password": {
              "type": "string"
            }
          }
        },
        "signupParameters": {
          "type": "object",
          "properties": {
            "email": {
              "type": "string"
            },
            "first_name": {
              "type": "string"
            },
            "last_name": {
              "type": "string"
            },
            "password": {
              "type": "string"
            },
            "bcit_number": {
              "type": "string"
            }
          }
        },
        "devices_info": {
          "type": "object",
          "properties": {
            "device_id": {
              "type": "string",
              "minimum": 1
            },
            "device_name": {
              "type": "string"
            },
            "location": {
              "type": "string"
            },
            "active": {
              "type": "boolean"
            }
          }
        },
        "requestProfile": {
          "type": "object",
          "properties": {
            "username": {
              "type": "string"
            }
          }
        },
        "profile": {
          "type": "object",
          "properties": {
            "firstname": {
              "type": "string"
            },
            "lastname": {
              "type": "string"
            },
            "email": {
              "type": "string"
            },
            "token": {
              "type": "string"
            }
          }
        },
        "Error": {
          "type": "object",
          "required": [
            "code",
            "message"
          ],
          "properties": {
            "code": {
              "type": "integer",
              "format": "int32"
            },
            "message": {
              "type": "string"
            }
          }
        }
      }
    }
  }
