{
  "openapi": "3.0.0",
  "info": {
    "description": "",
    "version": "1.0.0",
    "title": "ARLO-Air-Quality-API",
    "contact": {
      "email": ""
    },
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "servers": [
    {
      "url": "/"
    }
  ],
  "tags": [
    {
      "name": "ARLO-Air-Quality-API",
      "description": "RESTfulAPI for requesting and return air quality data from IOT devices"
    }
  ],
  "paths": {
    "/readings": {
      "post": {
        "tags": [
          "Post Reading"
        ],
        "summary": "Create a new request system",
        "requestBody": {
          "description": "Request Post Object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ReadingsRequest"
              }
            }
          }
        },
        "produces": [
          "application/json"
        ],
        "responses": {
          "201": {
            "description": "OK",
            "schema": {
              "$ref": "#/components/schemas/ReadingsRequest"
            }
          },
          "400": {
            "description": "Failed. Bad post data."
          }
        }
      }
    },
    "/devices": {
      "get": {
        "tags": [
          "Devices Request"
        ],
        "summary": "Get devices request",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/components/schemas/devices"
            }
          },
          "400": {
            "description": "Failed. Bad request."
          },
          "404": {
            "description": "Failed. The device is not found."
          }
        }
      }
    },
    "/login": {
      "post": {
        "tags": [
          "User Authentication"
        ],
        "summary": "Authentication returns a token to be used for API calls",
        "requestBody": {
          "description": "Request Post Object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/loginSuccess"
              }
            }
          }
        },
        "produces": [
          "application/json"
        ],
        "responses": {
          "201": {
            "description": "OK",
            "schema": {
              "$ref": "#/components/schemas/loginSuccess"
            }
          },
          "400": {
            "description": "Failed. Bad post data."
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "devices": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "id": {
            "type": "integer"
          },
          "location": {
            "type": "string"
          },
          "device_lng": {
            "type": "float"

          },
          "device_lat": {
            "type": "float"

          }
        }
      },
      "ReadingsRequest": {
        "type": "object",
        "properties": {
          "device_id": {
            "type": "integer",
            "minimum": "1"
          },
          "Temperature": {
            "type": "boolean"
          },
          "Humidity": {
            "type": "boolean"
          },
          "TVOC": {
            "type": "boolean"
          },
          "CO2": {
            "type": "boolean"
          },
          "Start_date": {
            "type": "string",
            "format": "date"
          },
          "End_date": {
            "type": "string",
            "format": "date"
          }
        }
      },
      "loginSuccess": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string"
          },
          "password": {
            "type": "string"

          }
        }
      }
    }
  }
}